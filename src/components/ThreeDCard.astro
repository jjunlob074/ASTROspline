---
export interface CardProps {
    URL: string;
    animate: string;
    colSpan?: string; // Tamaño de columnas en el grid
    rowSpan?: string; // Tamaño de filas en el grid
    bgColor?:string;
  }
  const { URL, colSpan = 'col-span-6', rowSpan = 'row-span-1', animate, bgColor="white" } = Astro.props;
  console.log(Astro.props)
---
<div class={`bg-white shadow-md border-${bgColor} rounded-3xl p-2 ${colSpan} ${rowSpan} ${animate} `}>
    <spline-viewer url={URL} class="threeD w-full h-full"></spline-viewer>
</div>
<style>
     .threeD {
            display: block;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }
</style>